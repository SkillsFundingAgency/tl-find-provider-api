@page
@model Sfa.Tl.Find.Provider.Web.Pages.Provider.RemoveNotificationModel
@{
    ViewData["Title"] = "Remove notification";
}

@section breadcrumbs {
    <a asp-page="./Notifications" class="govuk-back-link" id="tl-back">Return to notifications</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Do you want to remove notification for @Model.NotificationEmail?</h1>
        <p class="govuk-body">When removed, we will no longer send notifications to @Model.NotificationEmail</p>
        <button class="govuk-button govuk-button--warning">Remove email</button>
        <a href="/notifications" class="govuk-link govuk-!-padding-2 tl-display--inline-block">Cancel and return to notifications</a>

    </div>
</div>
