@page
@model ChooseOrganisationModel
@{
    ViewData["Title"] = "Choose your organisation";
}

<a asp-page="/Dashboard" class="govuk-back-link" id="tl-back">Back</a>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@ViewData["Title"]</h1>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">There is a problem</h2>
                <div class="govuk-error-summary__body">
                    <ul class="govuk-list govuk-error-summary__list">
                        <li><a sfa-validation-for="UkPrn"></a></li>
                    </ul>
                </div>
            </div>
        }

        <form id="tl-employer-interest-form" method="POST">
            @*<fieldset class="govuk-fieldset">*@
                <div class="govuk-form-group" sfa-validation-for="UkPrn" sfa-validationerror-class="govuk-form-group--error">
                    <label class="govuk-label" asp-for="UkPrn">
                        UKPRN
                    </label>
                    <span class="govuk-error-message" asp-validation-for="UkPrn"></span>
                    <input class="govuk-input govuk-input--width-20" asp-for="UkPrn" type="text"
                           sfa-validation-for="UkPrn" sfa-validationerror-class="govuk-input--error">
                </div>
            @*</fieldset>*@
            <button type="submit" class="govuk-button" id="tl-search">Save</button>
        </form>
    </div>
</div>
