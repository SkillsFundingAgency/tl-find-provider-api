@page
@model Sfa.Tl.Find.Provider.Web.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">@PageExtensions.GetServiceName()</h1>
        <h2 class="govuk-heading-m">Provider summary</h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-9" id="tl-placement-table">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    UKPRN
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.UkPrn
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    URN
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.Urn
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Display Name
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.OrganisationName
                </dd>
            </div>
        </dl>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body"><a class="govuk-link" asp-page="/EmployerInterest/Index">Old Employer Interest</a></p>
        <p class="govuk-body"><a class="govuk-link" asp-page="/EmployerList">Employer List</a></p>
        <p class="govuk-body"><a class="govuk-link" asp-page="/EmployerDetails">Employer Details</a></p>
    </div>
</div>

